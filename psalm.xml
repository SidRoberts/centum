<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests/_support"/>
        <directory name="tests/console"/>
        <directory name="tests/web"/>
        <directory name="tests/unit"/>
        <ignoreFiles allowMissingFiles="true">
            <directory name="tests/_support/_generated"/>
            <directory name="vendor"/>
            <file name="tests/_support/ConsoleTester.php"/>
            <file name="tests/_support/UnitTester.php"/>
            <file name="tests/_support/WebTester.php"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="tests/_support/Models"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>
    <plugins>
        <pluginClass class="Psalm\MockeryPlugin\Plugin"/>
    </plugins>
</psalm>
